      *** HOT PRODUCT SLIDESHOW ***
      _________________________________________________________
    #hot
      .box
        .container
          .col-md-12
            %h2 Best sellers
      .container
        .product-slider
          - products[0..4].each do |product|
            .item
              .product
                .flip-container
                  .flipper
                    .front
                      %a{:href => "product.html"}
                        %img.img-responsive.img-category{:alt => "", :src => "img/#{product.fetch(:img)}"}/
                    .back
                      %a{:href => "product.html"}
                        %img.img-responsive.img-category{:alt => "", :src => "img/#{product.fetch(:img)}"}/
                %a.invisible{:href => "product.html"}
                  %img.img-responsive.img-category{:alt => "", :src => "img/#{product.fetch(:img)}"}/
                .text
                  %h3
                    %a{:href => "product.html"}= product.fetch(:title)
                  %p.price
                    %del= "$#{product.fetch(:price).round(2)}"
                    = "$#{(product.fetch(:price) * 0.8).round(2)}"
                .ribbon.new
                  .theribbon NEW
                  .ribbon-background

